{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    },
    "Console": {
      "IncludeScopes": true,
      "LogLevel": {
        "Default": "Error",
        "Backend.Services": "Information"
      }
    }
  },
  "AllowedHosts": "*",
  "UsersSettings": {
    "ConnectionString": "Host=localhost;Port=5432;Username=myuser;Password=mypass;Database=myschema;",
    "MaxRetryCount": 3,
    "MaxRetryDelay": 15,
    "SecretKey": "SETUP_MY_AWESOME_SECRET_KEY_0123456789",
    "Lifespan": 60,
    "Issuer": "http://localhost:5000",
    "Audience": "http://localhost:5000",
    "Authority": "http://localhost:5000/login",
    "PublicUrl": "http://localhost:5000"
  },
  "CacheSettings": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "api-users-backend"
  },
  "EmailSettings": {
    "Server": "smtp.yandex.ru",
    "Port": 465,
    "Name": "Backend",
    "Email": "MY_EMAIL@yandex.ru",
    "Password": "MY_PASSWORD"
  },
  "HealthChecks-UI": {
    "HealthChecks": [
      {
        "Name": "api-users-backend",
        "Uri": "http://localhost:5000/hc"
      }
    ],
    "EvaluationTimeOnSeconds": 10,
    "MinimumSecondsBetweenFailureNotifications": 60
  }
}
